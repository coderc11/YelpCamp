<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-sm">
			<h1 class="d-block p-2 bg-info text-white m-3 text-center">Edit Comment</h1>
			<div class="stylized">
				<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="CommentText">Edit Comment</label>
						<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
					</div>
					<div class="form-group">
						<button class="btn btn-sm btn-info btn-block">Submit!</button>
					</div>
				</form>
				<a class="badge badge-light" href="/campgrounds">Go Back To Campgrounds</a>
			</div>
		</div>
	</div>
</div>


<% include ../partials/footer %>