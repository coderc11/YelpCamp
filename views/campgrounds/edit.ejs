<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-sm">
			<h1 class="text-center bg-success text-white p-2 m-3">Edit <%= campground.name %></h1>
			<div class="stylized">
				<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="CampgroundName">Edit Campground Name</label>
						<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<label for="CampgroundPrice">Edit Price</label>
						<input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.00" step="0.01">
					</div>
					<div class="form-group">
						<label for="CampgroundImage">Edit Image</label>
						<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
					</div>
					<div class="form-group">
						<label for="CampgroundDescription">Description</label>
						<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
					</div>
					<div class="form-group">
						<button class="btn btn-sm btn-success btn-block">Submit!</button>
					</div>
				</form>
				<a class="badge badge-light" href="/campgrounds">Go Back To Campgrounds</a>
			</div>
		</div>
	</div>
</div>


<% include ../partials/footer %>