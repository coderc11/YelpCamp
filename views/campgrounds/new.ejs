<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-sm">
			<h1 class="p-2 bg-primary text-white mt-3 text-center">Create a New Campground!</h1>
			<div class="stylized">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<label for="exampleInputUsername1">Campground Name</label>
						<input class="form-control" type="text" name="name" placeholder="Campground Name">
					</div>
					<div class="form-group">
						<label for="exampleInputUsername1">Price Per Night</label>
						<input class="form-control" type="number" name="price" placeholder="Price" min="0.00" step=
	"0.01">
					</div>
					<div class="form-group">
						<label for="exampleInputUsername1">Campground Picture</label>
						<input class="form-control" type="text" name="image" placeholder="Image url">
					</div>
					<div class="form-group">
						<label for="exampleInputUsername1">Description Info</label>
						<input class="form-control" type="text" name="description" placeholder="Description Info">
					</div>
					<div class="form-group">
						<button class="btn btn-sm btn-primary btn-block">Submit!</button>
					</div>
				</form>
				<a class="badge badge-light" href="/campgrounds">Go Back To Campgrounds</a>
			</div>	
		</div>
	</div>
</div>


<% include ../partials/footer %>